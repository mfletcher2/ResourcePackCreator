<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nezdats.rpc">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nezdats.rpc.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nezdats.rpc.RecyclerViewFileChooser"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nezdats.rpc.SettingsActivity"
            android:parentActivityName="com.nezdats.rpc.MainActivity" />
        <activity
            android:name="com.nezdats.rpc.HelpActivity"
            android:parentActivityName="com.nezdats.rpc.MainActivity" />
    </application>

</manifest>